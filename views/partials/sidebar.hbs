<div class="col-lg-4 col-md-5">
                    <div class="blog__sidebar">
                        <div class="blog__sidebar__search">
                            <form action="#" onsubmit = "searchSubmit(event)">
                                <input id = "searchInput" type="text" placeholder="Search...">
                                <button type="submit"><span class="icon_search"></span></button>
                            </form>
                        </div>
                        <div class="blog__sidebar__item">
                            <h4>Categories</h4>
                            <ul>
                                <li><a href="/blogs?page=1">All</a></li>
                                {{#each categories}}
                                <li><a href="/blogs/category/{{id}}?page=1">{{name}} ({{Blogs.length}})</a></li>
                                {{/each}}
                            </ul>
                        </div>

                        <div class="blog__sidebar__item">
                            <h4>Search By Tags</h4>
                            <div class="blog__sidebar__item__tags">
                                {{#each tags}}
                                    <a href="/blogs/tag/{{id}}?page=1">{{name}}</a>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>

<script>
  function searchSubmit(e){
    e.preventDefault();
    let searchText = document.querySelector("#searchInput").value 
    window.location.href = "/blogs/search/" + searchText
  }

</script>